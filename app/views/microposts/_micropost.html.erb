<li>
  <span class="content">
    <!-- iframe width="560" height="315" src="http://www.youtube.com/embed/<%= raw(micropost.content) %>" frameborder="0" allowfullscreen enablejsapi="1"></iframe -->
    <iframe width="560" height="315" src="http://www.youtube.com/v/<%= raw(micropost.content) %>?version=3&enablejsapi=1" frameborder="0" allowfullscreen></iframe>

  </span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(micropost.created_at) %> ago.
  </span>
  <% if current_user?(micropost.user) %>
    <%= link_to "delete", micropost, method: :delete,
                                     data: { confirm: 'You sure?' },
                                     title: micropost.content %>
  <% end %>
</li>
